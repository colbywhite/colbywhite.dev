---
layout: base.html.njk
pagination:
  data: collections.posts
  size: 10
  reverse: true
---
<section class="archive-description">
  {{ content | safe }}
</section>

<section class="archive">
  {% for post in pagination.items %}
    {% if post.data.published %}
      <h2>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      <p class="byline">
        {{ post.data.date | dateString }}
        by <a href="/about">Colby M. White</a>
      </p>
      <p class="excerpt">{{ post.data.excerpt }}...</p>
      <section class="post-footer">
        <section class="post-tags">
          {% for tag in post.data.tags %}
            {% if tag != "posts" %}
              <p class="post-tag">{{ tag }}</p>
            {% endif %}
          {% endfor %}
        </section>
        <a href="{{ post.url }}">Read &rarr;</a>
      </section>
    {% endif %}
  {% endfor %}
</section>

