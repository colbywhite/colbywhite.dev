<section>
  <h2 class="border-b border-b-gray-500 text-5xl mb-8">Work experience</h2>
  <ol class="flex flex-col gap-8">
    {% for work in resume.work %}
      <li class="text-2xl font-light font-sans">
        <article class="flex flex-col gap-4">
          <div class="flex flex-col">
            <p class="text-gray-700 mb-3 text-sm uppercase tracking-widest">
              <time datetime="{{ work.startDate | dateStringToFormat("yyyy-MM-dd") }}">
                {{ work.startDate | monthString }}
              </time>
              &ndash;
              {% if work.endDate %}
                <time datetime="{{ work.endDate | dateStringToFormat("yyyy-MM-dd") }}">
                  {{ work.endDate | monthString }}
                </time>
              {% else %}
                present
              {% endif %}
            </p>
            <h3 class="text-3xl mb-1">{{ work.position }}</h3>
            <p class="text-lg">
              {% if work.url %}
                <a href="{{ work.url }}" target="_blank" rel="noopener noreferrer">{{ work.name }}</a>
              {% else %}
                <span>{{ work.name }}</span>
              {% endif %}
              {% if work.location %}
                <span aria-hidden="true">&middot;</span>
                <span>{{ work.location }}</span>
              {% endif %}
            </p>
          </div>
          <ul class="list-disc pl-4 flex flex-col gap-2">
            {% for highlight in work.highlights %}
              <li class="font-light">{{ highlight }}</li>
            {% endfor %}
          </ul>
        </article>
      </li>
    {% endfor %}
  </ol>
</section>
