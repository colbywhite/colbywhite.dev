---
import BaseListItem from "./BaseListItem.astro";
import FormattedTime from "../FormattedTime.astro";
import type { CollectionEntry } from "astro:content";
export interface Props extends CollectionEntry<"blog"> {}

const {
  id,
  data: { title, pubDatetime, modDatetime, timezone, description },
} = Astro.props;
const hasBeenUpdated = modDatetime && modDatetime > pubDatetime;
const datetime = hasBeenUpdated ? modDatetime : pubDatetime;
const prefix = hasBeenUpdated ? "Updated on" : "Published on";
---

<BaseListItem variant="h3" {title} href={`/posts/${id}`} {description}>
  <FormattedTime {timezone} {prefix} {datetime} />
</BaseListItem>
